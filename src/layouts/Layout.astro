---
import Footer from "../components/Footer.astro";
import "../styles/global.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Portfolio de Luis Fernando Hinojosa Rivera - Desarrollador Full-Stack"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-dark-bg text-white overflow-x-hidden">
    <!-- Animated Background -->
    <div class="fixed inset-0 z-0">
      <div
        class="absolute inset-0 bg-gradient-to-br from-cyber-blue/5 via-cyber-purple/5 to-cyber-pink/5 animate-gradient bg-[length:400%_400%]"
      >
      </div>
      <div
        class="absolute inset-0 bg-[radial-gradient(circle_at_20%_50%,rgba(0,245,255,0.1),transparent_50%)] animate-pulse-slow"
      >
      </div>
      <div
        class="absolute inset-0 bg-[radial-gradient(circle_at_80%_20%,rgba(139,92,246,0.1),transparent_50%)] animate-pulse-slow"
        style="animation-delay: 1s;"
      >
      </div>
      <div
        class="absolute inset-0 bg-[radial-gradient(circle_at_40%_80%,rgba(244,113,181,0.1),transparent_50%)] animate-pulse-slow"
        style="animation-delay: 2s;"
      >
      </div>
    </div>

    <slot />
    <Footer />
  </body>
</html>
