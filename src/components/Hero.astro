---
import { personalInfo } from "../data/portfolio";
import MailIcon from "./icons/MailIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
---

<section
  id="home"
  class="relative min-h-screen flex items-center justify-center px-6 pt-20"
>
  <div class="text-center z-10">
    <div class="mb-8 animate-fade-in">
      <div
        class="w-32 h-32 mx-auto mb-6 bg-gradient-to-br from-cyber-blue to-cyber-purple rounded-full flex items-center justify-center text-6xl animate-float"
      >
        üë®‚Äçüíª
      </div>
      <h1
        class="text-5xl md:text-7xl font-bold mb-4 bg-gradient-to-r from-cyber-blue via-cyber-purple to-cyber-pink bg-clip-text text-transparent animate-gradient bg-[length:400%_400%]"
      >
        {personalInfo.name}
      </h1>
      <h2 class="text-3xl md:text-4xl font-mono text-gray-300 mb-6">
        {personalInfo.lastName}
      </h2>
      <p class="text-xl md:text-2xl text-gray-400 mb-8 max-w-2xl mx-auto">
        {personalInfo.description}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="#projects"
          class="px-8 py-3 bg-gradient-to-r from-cyber-blue to-cyber-purple rounded-lg hover:shadow-lg hover:shadow-cyber-blue/50 transition-all duration-300 transform hover:scale-105"
        >
          Ver Proyectos
        </a>
        <a
          href="#contact"
          class="px-8 py-3 border border-cyber-blue text-cyber-blue rounded-lg hover:bg-cyber-blue hover:text-dark-bg transition-all duration-300"
        >
          Cont√°ctame
        </a>
      </div>
    </div>
    <div
      class="flex justify-center space-x-6 text-2xl animate-fade-in"
      style="animation-delay: 0.5s;"
    >
      <a
        href={`mailto:${personalInfo.email}`}
        class="hover:text-cyber-blue transition-colors"><MailIcon /></a
      >
      <a
        href={personalInfo.linkedin}
        class="hover:text-cyber-blue transition-colors"><LinkedInIcon /></a
      >
      <a
        href={personalInfo.github}
        class="hover:text-cyber-blue transition-colors"><GitHubIcon /></a
      >
    </div>
  </div>
</section>
