---
export interface Props {
  experience: {
    id: string;
    title: string;
    company: string;
    period: string;
    description: string;
    responsibilities: string[];
    technologies: string[];
    icon: string;
  };
}

const { experience } = Astro.props;
---

<div
  class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-slate-900/50 to-slate-800/30 backdrop-blur-sm border border-slate-700/50 hover:border-cyan-400/50 transition-all duration-500 hover:shadow-2xl hover:shadow-cyan-500/20"
>
  <!-- Background gradient effect -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
  >
  </div>

  <!-- Animated border -->
  <div
    class="absolute inset-0 rounded-2xl bg-gradient-to-r from-cyan-400/0 via-cyan-400/20 to-cyan-400/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-sm"
  >
  </div>

  <div class="relative p-8">
    <!-- Header -->
    <div class="flex items-start gap-4 mb-6">
      <div
        class="text-3xl group-hover:scale-110 transition-transform duration-300"
      >
        {experience.icon}
      </div>
      <div class="flex-1 min-w-0">
        <h3
          class="text-xl font-bold text-white mb-2 group-hover:text-cyan-300 transition-colors"
        >
          {experience.title}
        </h3>
        <div class="flex flex-col sm:flex-row sm:items-center gap-2 text-sm">
          <span class="text-cyan-300 font-medium">
            {experience.company}
          </span>
          <span class="hidden sm:block text-slate-400">•</span>
          <span class="text-slate-400">
            {experience.period}
          </span>
        </div>
      </div>
    </div>

    <!-- Description -->
    <p class="text-slate-300 mb-6 leading-relaxed">
      {experience.description}
    </p>

    <!-- Responsibilities -->
    <div class="mb-6">
      <h4
        class="text-sm font-semibold text-cyan-300 mb-3 uppercase tracking-wide"
      >
        Responsabilidades
      </h4>
      <ul class="space-y-2">
        {
          experience.responsibilities.map((responsibility) => (
            <li class="flex items-start gap-3 text-slate-300 text-sm">
              <div class="w-1.5 h-1.5 bg-cyan-400 rounded-full mt-2 flex-shrink-0" />
              <span>{responsibility}</span>
            </li>
          ))
        }
      </ul>
    </div>

    <!-- Technologies -->
    <div>
      <h4
        class="text-sm font-semibold text-cyan-300 mb-3 uppercase tracking-wide"
      >
        Tecnologías
      </h4>
      <div class="flex flex-wrap gap-2">
        {
          experience.technologies.map((tech) => (
            <span class="px-3 py-1 bg-gradient-to-r from-slate-700/50 to-slate-600/50 backdrop-blur-sm rounded-full text-xs font-medium text-slate-300 border border-slate-600/30 hover:border-cyan-400/50 hover:text-cyan-300 transition-all duration-300">
              {tech}
            </span>
          ))
        }
      </div>
    </div>
  </div>

  <!-- Glow effect -->
  <div
    class="absolute -inset-px rounded-2xl bg-gradient-to-r from-cyan-500/20 via-purple-500/20 to-pink-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-sm -z-10"
  >
  </div>
</div>

<style>
  .group:hover {
    transform: translateY(-2px);
  }
</style>
