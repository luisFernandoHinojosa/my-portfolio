---
export interface Props {
  experience: {
    id: string;
    title: string;
    company: string;
    period: string;
    description: string;
    responsibilities: string[];
    technologies: string[];
    icon: string;
  };
}

const { experience } = Astro.props;
---

<div
  class="group relative overflow-hidden rounded-2xl border border-dark-border hover:border-cyber-blue transition-all duration-500 hover:shadow-2xl hover:shadow-cyan-500/20"
>
  <div class="relative p-8">
    <!-- Header -->
    <div class="flex items-start gap-4 mb-6">
      <div
        class="text-3xl group-hover:scale-110 transition-transform duration-300"
      >
        {experience.icon}
      </div>
      <div class="flex-1 min-w-0">
        <h3 class="text-xl font-bold text-cyber-blue mb-2">
          {experience.title}
        </h3>
        <div class="flex flex-col sm:flex-row sm:items-center gap-2 text-sm">
          <span class="text-cyber-purple font-medium">
            {experience.company}
          </span>
          <span class="hidden sm:block text-slate-500">•</span>
          <span class="text-slate-500">
            {experience.period}
          </span>
        </div>
      </div>
    </div>

    <!-- Description -->
    <p class="text-slate-600 mb-6 leading-relaxed">
      {experience.description}
    </p>

    <!-- Responsibilities -->
    <div class="mb-6">
      <h4
        class="text-sm font-semibold text-cyber-blue mb-3 uppercase tracking-wide"
      >
        Responsabilidades
      </h4>
      <ul class="space-y-2">
        {
          experience.responsibilities.map((responsibility) => (
            <li class="flex items-start gap-3 text-slate-500 text-sm">
              <div class="w-1.5 h-1.5 bg-cyber-blue rounded-full mt-2 flex-shrink-0" />
              <span>{responsibility}</span>
            </li>
          ))
        }
      </ul>
    </div>
    <div>
      <h4
        class="text-sm font-semibold text-cyber-blue mb-3 uppercase tracking-wide"
      >
        Tecnologías
      </h4>
      <div class="flex flex-wrap gap-2">
        {
          experience.technologies.map((tech) => (
            <span class="px-3 py-1 bg-gradient-to-r from-cyber-blue to-cyber-pink backdrop-blur-sm rounded-full text-xs font-medium text-slate-100 border border-cyber-blue hover:border-cyber-blue transition-all duration-300">
              {tech}
            </span>
          ))
        }
      </div>
    </div>
  </div>
</div>

<style>
  .group:hover {
    transform: translateY(-2px);
  }
</style>
