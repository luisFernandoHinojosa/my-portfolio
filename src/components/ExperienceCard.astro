---
export interface Props {
  experience: {
    id: string;
    title: string;
    company: string;
    period: string;
    description: string;
    responsibilities: string[];
    technologies: string[];
    icon: string;
  };
}

const { experience } = Astro.props;
---

<div class="p-6">
  <div class="flex items-start gap-4 mb-6">
    <div
      class="text-3xl group-hover:scale-110 transition-transform duration-300"
    >
      {experience.icon}
    </div>
    <div class="flex-1 min-w-0">
      <h3 class="text-xl font-bold text-light-primary mb-2">
        {experience.title}
      </h3>
      <div class="flex flex-col sm:flex-row sm:items-center gap-2 text-sm">
        <span class="text-light-primary font-medium">
          {experience.company}
        </span>

        <span class="text-light-text-body">
          {experience.period}
        </span>
      </div>
    </div>
  </div>

  <!-- Description -->
  <p class="text-light-text-body mb-6 leading-relaxed">
    {experience.description}
  </p>

  <!-- Responsibilities -->
  <div class="mb-6">
    <h4
      class="text-sm font-semibold text-light-primary mb-3 uppercase tracking-wide"
    >
      Responsabilidades
    </h4>
    <ul class="space-y-2">
      {
        experience.responsibilities.map((responsibility) => (
          <li class="flex items-start gap-3 text-light-text-body text-sm">
            <div class="w-1.5 h-1.5 bg-cyber-blue rounded-full mt-2 flex-shrink-0" />
            <span>{responsibility}</span>
          </li>
        ))
      }
    </ul>
  </div>
  <div>
    <h4
      class="text-sm font-semibold text-light-primary mb-3 uppercase tracking-wide"
    >
      Tecnolog√≠as
    </h4>
    <div class="flex flex-wrap gap-2">
      {
        experience.technologies.map((tech) => (
          <span class="px-3 py-1 text-light-accent bg-light-background drop-shadow-lg text-sm">
            {tech}
          </span>
        ))
      }
    </div>
  </div>
</div>

<style>
  .group:hover {
    transform: translateY(-2px);
  }
</style>
