---
import ExperienceCard from "./ExperienceCard.astro";
import { experiences } from "../data/portfolio";
---

<section id="experience" class="py-20 px-6">
  <div class="container mx-auto">
    <div class="text-center mb-16">
      <div class="inline-block">
        <div class="flex items-center gap-3 mb-4">
          <div
            class="w-12 h-0.5 bg-gradient-to-r from-transparent to-cyber-blue"
          >
          </div>
          <span
            class="text-cyber-blue font-mono text-sm uppercase tracking-widest"
          >
            02. Experiencia
          </span>
          <div
            class="w-12 h-0.5 bg-gradient-to-l from-transparent to-cyber-blue"
          >
          </div>
        </div>
      </div>

      <h2 class="text-4xl md:text-5xl font-bold text-cyber-purple mb-6">
        Trayectoria
        <span
          class="block text-transparent bg-clip-text bg-gradient-to-r from-cyber-blue via-cyber-purple to-cyber-pink"
        >
          Profesional
        </span>
      </h2>

      <p class="text-xl text-slate-500 max-w-2xl mx-auto leading-relaxed">
        Mi experiencia construyendo soluciones digitales innovadoras y
        trabajando en equipos multidisciplinarios
      </p>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="relative">
        <div class="space-y-12">
          {
            experiences.map((experience, index) => (
              <div
                class={`relative flex items-center ${index % 2 === 0 ? "md:flex-row" : "md:flex-row-reverse"}`}
              >
                <div class="absolute left-4 md:left-1/2 w-3 h-3 bg-gradient-to-r from-cyber-blue to-cyber-purple rounded-full transform -translate-x-1/2 md:translate-x-0 z-10 shadow-lg shadow-cyan-500/50">
                  <div class="absolute inset-0 bg-gradient-to-r from-cyber-blue to-cyber-purple rounded-full animate-pulse" />
                </div>

                <div
                  class={`w-full md:w-1/2 ${index % 2 === 0 ? "md:pr-8" : "md:pl-8"} pl-12 md:pl-0`}
                >
                  <div class="transform transition-all duration-500 hover:scale-105">
                    <ExperienceCard experience={experience} />
                  </div>
                </div>

                <div class="hidden md:block w-1/2" />
              </div>
            ))
          }
        </div>
      </div>
    </div>

    <div class="text-center mt-16">
      <div class="inline-block p-6 transition-all duration-500">
        <p class="text-slate-600 mb-4">
          ¿Interesado en conocer más sobre mi experiencia?
        </p>
        <a
          href="#contact"
          class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-cyber-blue to-cyber-purple text-white font-medium rounded-lg hover:from-cyber-blue hover:to-cyber-purple transition-all duration-300 hover:shadow-lg hover:shadow-cyan-500/25"
        >
          Hablemos
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .grid-cols-20 {
    grid-template-columns: repeat(20, minmax(0, 1fr));
  }

  .grid-rows-20 {
    grid-template-rows: repeat(20, minmax(0, 1fr));
  }
</style>
