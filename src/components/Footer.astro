---
import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import MailIcon from "./icons/MailIcon.astro";
const year = new Date().getFullYear();
---

<footer
  class="bg-dark-bg text-cyber-blue border-t border-dark-border py-8 px-4"
>
  <div class="max-w-6xl mx-auto flex flex-col items-center text-center gap-4">
    <h2 class="text-cyber-purple text-xl sm:text-2xl font-semibold">
      Luis Fernando Hinojosa Rivera
    </h2>

    <div class="flex flex-wrap justify-center gap-6 text-base sm:text-lg">
      <a
        href="mailto:luisfernando@example.com"
        class="text-cyber-purple hover:text-cyber-blue transition flex flex-col sm:flex-row items-center"
      >
        <MailIcon />
        <span>Contacto</span>
      </a>
      <a
        href="https://github.com/luisFernandoHinojosa"
        target="_blank"
        rel="noopener noreferrer"
        class="text-cyber-purple hover:text-cyber-blue transition flex flex-col sm:flex-row items-center"
      >
        <GitHubIcon />
        <span>GitHub</span>
      </a>
      <a
        href="https://www.linkedin.com/in/luis-fernando-hinojosa-rivera-003903240/"
        target="_blank"
        rel="noopener noreferrer"
        class="text-cyber-purple hover:text-cyber-blue transition flex flex-col sm:flex-row items-center"
      >
        <LinkedInIcon />
        <span>LinkedIn</span>
      </a>
    </div>

    <p class="text-sm text-dark-border">
      &copy; {year} Luis Fernando Hinojosa. Todos los derechos reservados.
    </p>
  </div>
</footer>
